#!/bin/bash
#
# Useful script I wrote to have fun while updating homebrew
# 
# last update 06/24/21

# Light blue looks good with my colorscheme
TEXTCOLOR='\033[1;34m'

printf "${TEXTCOLOR}Now updating homebrew..."

# Update local base of available packages and versions
printf "\n${TEXTCOLOR}Updating local base of available packages and versions..."
brew update

# Install new versions of outdated packages
printf "${TEXTCOLOR}Upgrading outdated hombrew packages..."
brew upgrade

# Cache cleanup of unfinished downloads
printf "${TEXTCOLOR}Cleaning cache of unfinished downloads...\n"
brew cleanup

# Show problems if any
printf "${TEXTCOLOR}Checking for issues...\n"
brew doctor
